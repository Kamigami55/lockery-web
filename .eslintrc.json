{
  "extends": [
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "ecmaFeatures": {
    "modules": true,
    "spread" : true,
    "restParams" : true
  },
  "env" : {
    "browser" : true,
    "node" : true,
    "es6" : true
  },
  "rules" : {
    "no-unused-vars" : 2,
    "no-undef" : 2,
    "react/react-in-jsx-scope": "off"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "globals": {
    "React": "writable"
  }
}